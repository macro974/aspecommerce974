@{
    ViewBag.Title = "Home Page";
}
@using MC3Shopper.Models;
@Styles.Render("~/Content/css")

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-10">
        <div class="page-header">
            <h2>Nouveautés</h2>
        </div>

        <div class="slider arrivage">
            @foreach (Produit item in @ViewBag.arrivage)
            {
                <div>
                    <p class="flotte">
                        <img src="~/Content/img/hp.png" alt="HP" width="100" height="100">
                    </p>
                    <p style="line-height:10px">
                        <!-- le lien vers le produit-->
                    <p><em>@item.Reference</em></p>
                    <p><strong>@item.Designation</strong></p>
                    <p>Prix : @item.Prix €</p>
                    </p>
                </div>
            }
        </div>
    </div>
    <div class="col-md-10">
        <div class="page-header">
            <h2>Promotions</h2>
        </div>
        <div class="slider promo">
            @foreach (Produit item in @ViewBag.promo)
            {
                <div>
                    <p class="flotte">
                        <img src="~/Content/img/hp.png" alt="HP" width="100" height="100">
                    </p>
                    <p style="line-height:65px;">
                        <!-- le lien vers le produit-->
                    <p><em>@item.Reference</em></p>
                    <p><strong>@item.Designation</strong></p>
                    <p>Prix : @item.Prix €</p>
                    </p>
                </div>
            }
        </div>
    </div>
    <div class="col-md-10">
        <div class="page-header">
            <h2>Destockage</h2>
        </div>
        <div class="slider destock">
            @foreach (Produit item in @ViewBag.destock)
            {
                <div>
                    <p class="flotte">
                        <img src="~/Content/img/hp.png" alt="HP" width="100" height="100">
                    </p>
                    <p style="line-height:65px;">
                        <!-- le lien vers le produit-->
                    <p><em>@item.Reference</em></p>
                    <p><strong>@item.Designation</strong></p>
                    <p>Prix : @item.Prix €</p>
                    </p>
                </div>
            }
        </div>
    </div>
</div>