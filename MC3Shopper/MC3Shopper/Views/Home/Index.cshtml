@using MC3Shopper.Models
@{
    ViewBag.Title = "Accueil";
}
@Styles.Render("~/Content/css")
<div class="">
    <div id="my_carousel" class="carousel slide" data-ride="carousel">
        <!-- Bulles -->
        <ol class="carousel-indicators">
            <li data-target="#my_carousel" data-slide-to="0" class="active"></li>
            <li data-target="#my_carousel" data-slide-to="1"></li>
            <li data-target="#my_carousel" data-slide-to="2"></li>
        </ol>
        <!-- Slides -->
        <div class="carousel-inner">
            <!-- Page 1 -->
            <div class="item active">
                <div class="carousel-page">
                    <img id="img-slide" src="~/Content/img/slider/HP AiO.png" class="img-responsive" style="margin: 0px auto;" />
                </div>
                <div class="carousel-caption">HP Slate All in One 21 </br><strong>319,00€</strong></div>
            </div>
            <!-- Page 2 -->
            <div class="item">
                <div class="carousel-page">
                    <img id="img-slide" src="~/Content/img/slider/HP ProBook 470.png" class="img-responsive img-rounded"
                         style="margin: 0px auto;" />
                </div>
                <div class="carousel-caption">HP ProBook 470 </br><strong>790,00€</strong></div>
            </div>
            <!-- Page 3 -->
            <div class="item">
                <div class="carousel-page">
                    <img id="img-slide" src="~/Content/img/slider/HP Serveur DL380pG8.png" class="img-responsive img-rounded"
                         style="margin: 0px auto; max-height: 100%;" />
                </div>
                <div class="carousel-caption">HP Serveur DL380pG8 </br><strong>2349,00€</strong></div>
            </div>
        </div>
        <!-- Contrôles -->
        <a class="left carousel-control" href="#my_carousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#my_carousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>
<div class="">
    <div class="col-md-12 add-padding">
        <div class="page-header">
            <h2>Nouveautés</h2>
        </div>
        <div class="slider arrivage">
            @foreach (Produit item in @ViewBag.arrivage)
            {
                <div>
                    <div class="col-md-2">
                        <img src="~/Content/img/hp.png" alt="HP" width="100" height="100">
                    </div>
                    <div class="col-md-offset-1 col-md-9">
                        <p style="line-height: 10px">
                            <!-- le lien vers le produit-->
                            @Html.ActionLink(item.Reference, "Details", "Produit", new { id = HttpUtility.UrlEncode(item.Reference).Replace('%', '!') }, new { @class = " modal-link Reference" })

                        <p><strong>@item.Designation</strong></p>
                        <p>Prix : @item.Prix €</p>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-12  add-padding">
        <div class="page-header">
            <h2>Promotions</h2>
        </div>
        <div class="slider promo">
            @foreach (Produit item in @ViewBag.promo)
            {
                <div>
                    <div class="col-md-2">
                        <img src="~/Content/img/hp.png" alt="HP" width="100" height="100">
                    </div>
                    <div class="col-md-offset-1 col-md-9">
                        <p style="line-height: 65px;">
                            <!-- le lien vers le produit-->
                            @Html.ActionLink(item.Reference, "Details", "Produit", new { id = HttpUtility.UrlEncode(item.Reference).Replace('%', '!') }, new { @class = " modal-link Reference" })
                        <p><strong>@item.Designation</strong></p>
                        <p>Prix : @item.Prix €</p>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-12  add-padding">
        <div class="page-header">
            <h2>Destockage</h2>
        </div>
        <div class="slider destock">
            @foreach (Produit item in @ViewBag.destock)
            {
                <div>
                    <div class="col-md-2">
                        <img src="~/Content/img/hp.png" alt="HP" width="100" height="100">
                    </div>
                    <div class="col-md-offset-1 col-md-9">
                        <p style="line-height: 65px;">
                            <!-- le lien vers le produit-->
                            @Html.ActionLink(item.Reference, "Details", "Produit", new { id = HttpUtility.UrlEncode(item.Reference).Replace('%', '!') }, new { @class = " modal-link Reference" })
                        <p><strong>@item.Designation</strong></p>
                        <p>Prix : @item.Prix €</p>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>